<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="clases">
	<class name="Usuario" table="USUARIO" abstract="true">

		<id name="id_usuario" type="int">
            <column name="ID_USUARIO" />

            <!-- hilo es por lo de la herencia -->
            <generator class="hilo" />
        </id>
        
        <property name="nombre" type="java.lang.String">
            <column name="NOMBRE" />
        </property>
        <property name="contrasenia" type="java.lang.String">
            <column name="CONTRASENIA" />
        </property>
        <property name="f_ingreso" type="java.time.LocalDateTime">
            <column name="F_INGRESO" />
        </property>
			


        <union-subclass name="Conductor" table="CONDUCTOR">


        	<!-- inverse=”true” means this is the relationship owner, and inverse=”false” (default) means it’s not. -->
        
        	<!-- conductor tiene muchos viajes -->
        	<list name="viajes" inverse="true" table="COND_VIAJES" lazy="true">
        		<!-- viaje tiene un conductor (necesitoponer conductor o pasajero porque vaije dspues tiene varios ids) -->
        	    <key column="ID_CONDUCTOR" />
        	    <list-index></list-index>
        	    <one-to-many class="Viaje" />
        	</list>


        	<!-- conductor tiene mucchas calificaciones -->
        	<list name="calificaciones" inverse="false" table="CALIFICACION" lazy="true">
        		<!-- una calificacion es de un solo conductor -->
        	    <key column="ID_CONDUCTOR" />
        	    <list-index></list-index>
        	    <one-to-many class="Calificacion" />
        	</list>

        	<property name="f_licencia" type="java.time.LocalDateTime">
        	    <column name="F_LICENCIA" />
        	</property>

        	
		</union-subclass>     

		<union-subclass name="Pasajero" table="PASAJERO">
			<property name="credito" type="float">
	            <column name="CREDITO" />
	        </property>

	        <!-- un pasajero tiene muchos viajes -->
	        <list name="viajes" inverse="true" table="PAS_VIAJES" lazy="true">
        		<!-- viaje tiene muchos pasajeros -->
        	    <key column="ID_PASAJERO" />
        	    <list-index></list-index>
        	    <many-to-many class="Viaje" />
        	</list>
	        
	 </union-subclass>
		
	</class>
</hibernate-mapping>