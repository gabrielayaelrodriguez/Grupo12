<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="clases">
	<class name="Muber">
		<id name="id_muber">
			  <generator class="native"/>
		</id>
	
	<list name="conductores" cascade="all" inverse="false" >
        <key>
            <column name="id_conductor"  />
        </key>
        <list-index>
            <column name="index"  />
        </list-index>
         <one-to-many class="Conductor" />
    </list>

    <list name="pasajeros" cascade="all" inverse="false" >
        <key>
            <column name="id_pasajero"  />
        </key>
        <list-index>
            <column name="index"  />
        </list-index>
         <one-to-many class="Pasajero" />
    </list>

    <list name="viajes" cascade="all" inverse="false" >
        <key>
            <column name="id_viaje"  />
        </key>
        <list-index>
            <column name="index"  />
        </list-index>
         <one-to-many class="Viaje" />
    </list>

	</class>
</hibernate-mapping>