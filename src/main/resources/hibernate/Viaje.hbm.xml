<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="clases.paquete">
	<class name="Viaje" table="VIAJE">
		<id name="IdViaje" column="ID_VIAJE">
			  <generator class="native"/>
		</id>
		<property name="finalizado" not-null="true"/>
		<property name="origen" not-null="true"/>
		<property name="destino" not-null="true"/>
		<property name="costo" not-null="true"/>
		<property name="fecha" not-null="true"/>
		
        <many-to-one name="conductor"
		 	column="ID_USUARIO"
			unique="true"
			not-null="true"
			cascade="all" />

		<set name="calificaciones" cascade="all">
			<key column="ID_VIAJE"
			   not-null="true"/>
			<one-to-many class="Calificacion"/>
		</set>

		<set name="pasajeros" table="VIAJE_PASAJERO" cascade="all">
			<key column="ID_VIAJE"/>
			<many-to-many column="ID_USAURIO" class="Pasajero"/>
		</set>

	</class>
</hibernate-mapping>