<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="clases">
	<class name="Usuario" table="USUARIO" abstract="true">

		<id name="id_usuario" type="java.lang.Long">
            <column name="ID_USUARIO" />
            <generator class="hilo" />
        </id>
        
        <property name="nombre" type="java.lang.String">
            <column name="NOMBRE" />
        </property>
        <property name="contrasenia" type="java.lang.String">
            <column name="CONTRASENIA" />
        </property>
        <property name="f_ingreso" type="java.time.LocalDateTime">
            <column name="F_INGRESO" />
        </property>

    <!--        CONDUCTOR                 -->
		<union-subclass name="Conductor" table="CONDUCTOR">
			<property name="f_licencia" type="java.util.Date">
        	    <column name="F_LICENCIA" />
        	</property>
        	<list name="viajes" inverse="true" table="VIAJE_CONDUCTOR" lazy="true">
        	    <key column="ID_CONDUCTOR" />
        	    <list-index></list-index>
        	    <one-to-many class="Viajes" />
        	</list>
        	
		</union-subclass>

		<!--        PASAJERO                      -->
		<union-subclass name="Pasajero" table="USUARIO_PASAJERO">
			<property name="credito" type="float">
	            <column name="CREDITO" />
	        </property>
	        <list name="viajes" inverse="true" table="VIAJE_PASAJERO" lazy="true">
        	    <key column="ID_PASAJERO" />
	            <list-index></list-index>
	            <many-to-many column="ID_VIAJE"  class="Viaje" />
	        </list>
	        <list name="calificaciones" inverse="true" table="CALIFICACION_PASAJERO" lazy="true">
        	    <key column="ID_PASAJERO" />
	            <list-index></list-index>
	            <one-to-many column="ID_CALIFICACION"  class="Calificacion" />
	        </list>
	        
	 </union-subclass>

