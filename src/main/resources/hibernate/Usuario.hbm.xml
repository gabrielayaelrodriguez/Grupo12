<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="clases">
	<class name="Usaurio" table="USUARIO">

		<id name="IdUsaurio" column="ID_USUARIO">
			  <generator class="native"/>
		</id>

		<property name="nombre" not-null="true"/>
		<property name="contrasena" not-null="true"/>
		<property name="f_ingreso" not-null="true"/>

		<union-subclass name="Pasajero" table="USUARIO_PASAJERO">
			<property name="credito" not-null="true" />

		<set name="viajes" table="VIAJE_PASAJERO" inverse="true">
			<key column="ID_USUARIO"/>
			<many-to-many column="ID_VIAJE" class="Viaje"/>
		</set>

		<set name="calificaciones" cascade="all">
			<key column="ID_CALIFICACION" not-null="true"/>
			<one-to-many class="Calificacion"/>
		</set>

		</union-subclass>

		<union-subclass name="Conductor" table="USUARIO_CONDUCTOR">
			<set name="viajes" inverse="true" cascade="all">
				<key column="ID_USUARIO"/>
				<one-to-many class="Viaje"/>
            </set>

		</union-subclass>
		
	</class>
</hibernate-mapping>