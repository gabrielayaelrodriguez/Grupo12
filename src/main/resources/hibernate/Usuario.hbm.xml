<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="clases">
	<class name="Usuario" abstract="true">

		<id name="id_usuario">
            <column name="id_usuario" />

            <!-- hilo es por lo de la herencia -->
            <generator class="hilo" />
        </id>
        
        <property name="nombre">
            <column name="nombre" />
        </property>
        <property name="contrasenia" type="java.lang.String">
            <column name="CONTRASENIA" />
        </property>
        <property name="f_ingreso" type="java.time.LocalDateTime">
            <column name="F_INGRESO" />
        </property>
			


        <union-subclass name="Conductor" table="CONDUCTOR">


        	<property name="f_licencia" type="java.time.LocalDateTime">
        	    <column name="F_LICENCIA" />
        	</property>

        	
		</union-subclass>     

		<union-subclass name="Pasajero">
			<property name="credito">
	            <column name="credito" />
	        </property>

            <list name="calificaciones" cascade="all" inverse="false" >
                <key>
                    <column name="id_usuario"  />
                </key>
                <list-index>
                    <column name="index"  />
                </list-index>
                 <one-to-many class="Calificacion" />
            </list>

            <set name="viajes" table="pasajero_viaje"  cascade="all" inverse="true"  >
                <key>
                    <column name="id_usuario"  />
                </key>
                <many-to-many column="id_viaje" class="Viaje" />
            </set>


	        
	   </union-subclass>
		
	</class>
</hibernate-mapping>