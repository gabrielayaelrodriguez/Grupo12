<hibernate-mapping package="clases">

	<class name="Viaje" table="VIAJE">
		<id name="id_viaje" type="int">
            <column name="ID_VIAJE" />
            <generator class="native" />
        </id>
        <property name="max_pasajeros" type="int">
            <column name="MAX_PASAJEROS" />
        </property>
		<property name="finalizado" type="boolean">
            <column name="FINALIZADO" />
        </property>
		<property name="destino" type="java.lang.String">
            <column name="DESTINO" />
        </property>
        <property name="origen" type="java.lang.String">
            <column name="ORIGEN" />
        </property>
		<property name="costo" type="float">
            <column name="COSTO" />
        </property>
		<property name="fecha" type="java.time.LocalDateTime">
            <column name="FECHA" />
        </property>


        <list name="pasajeros" table="PAS_VIAJES" lazy="true">
            <key column="ID_VIAJE" />
            <list-index></list-index>
            <many-to-many class="Pasajero" />
        </list>

        <many-to-one name="conductor" class="Conductor" fetch="join">
            <column name="ID_CONDUCTOR" />
        </many-to-one>



		
		
