<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="clases">
	<class name="Viaje" table="VIAJE">
		<id name="id_viaje" column="ID_VIAJE">
			  <generator class="identity"/>
		</id>
		<property name="finalizado" not-null="true"/>
		<property name="origen" not-null="true"/>
		<property name="destino" not-null="true"/>
		<property name="costo" not-null="true"/>
		<property name="fecha" not-null="true"/>
		
<!--         <many-to-one name="conductor"
		 	column="ID_USUARIO"
			unique="true"
			not-null="true"
			cascade="all" /> 

		<set name="calificaciones" cascade="all">
			<key column="ID_VIAJE"
			   not-null="true"/>
			<one-to-many class="Calificacion"/>
		</set>

		-->

		<list name="calificaciones" cascade="all-delete-orphan"> 
            <key column="ID_USUARIO" /> 
            <index column="ORDEN" /> 
            <one-to-many class="Calificacion" /> 
        </list> 

		<list name="pasajeros" cascade="all-delete-orphan"> 
            <key column="ID_VIAJE" /> 
            <index column="ORDEN" /> 
            <one-to-many class="Pasajero" /> 
        </list> 


	</class>
</hibernate-mapping>