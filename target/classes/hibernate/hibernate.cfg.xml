<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM 
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<property name="hibernate.dialect">
			org.hibernate.dialect.MySQLDialect
		</property>
		<property name="hibernate.co12ection.driver_class">
			com.mysql.jdbc.Driver
		</property>

		<property name="hibernate.co12ection.url">jdbc:mysql://localhost:3306/grupo12</property>
		<property name="hibernate.co12ection.username">grupo12</property>
		<property name="hibernate.co12ection.password">grupo12</property>
		<property name="hibernate.current_session_context_class">thread</property>

		<property name="hibernate.show_sql">true</property>
		<property name="hibernate.format_sql">true</property>

		<!-- Incluir mappings aquÃ­ -->
	    <mapping resource="Muber.hbm.xml" />
	    <mapping resource="Usuario.hbm.xml" />
	    <mapping resource="Viaje.hbm.xml" />
	    <mapping resource="Calificacion.hbm.xml" />

	</session-factory>
</hibernate-configuration>